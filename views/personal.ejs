<!DOCTYPE html>
<html lang="en">

<head>
  <title>personal</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script src="https://cdn.bootcss.com/jquery/3.0.0/jquery.min.js"></script>
  <script src="https://cdn.bootcss.com/socket.io/1.7.3/socket.io.min.js"></script>
  <script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style media="screen">
        .personal {
            position: relative;
            left: -50px;
        }

        .default {
            width: 300px;
            height: 100%;
            position: relative;
            left: 0px;
            float: left;
        }

        .myPhoto {
            width: 200px;
            height: 200px;
            border: 1px solid rgb(8, 151, 242);
            border-radius: 5px;
        }

        .mypersonal {
            position: relative;
            float: right;
        }

        h4 {
            color: rgb(8, 151, 242);
        }
        .old0{
          cursor: pointer;
        }
        .old1,.oMy1{
          display: none;
        }
    </style>
</head>

<body>
    <% include heard %>
        <nav class="container">

            <h1 class="personal"><strong><%= data.account %>&nbsp个人信息</strong></h1>
            <br>
            <br>
            <div class="default">
                <div class="myPhoto">
                    <img src="" alt="头像" />
                </div>
                <hr />
                  <h4>注册时间:</h4>
                  <p><span><%= data.information.reg_time %></span></p>
                  <hr />
                    <h4>最后登录时间:</h4>
                    <p><span><%= data.information.log_time %></span></p>
                    <hr />
                    <div class="dropdown">
                      <button  style="width:300px;" class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        我的问题
                        <span class="caret"></span>
                      </button>
                      <ul class="dropdown-menu"  style="width:300px;" aria-labelledby="dropdownMenu1">
                        <% data.Q_list.forEach(function(foin){ %>
                        <li><a href="#"><%= foin.title %></a></li>
                        <li role="separator" class="divider"></li>
                        <% }) %>
                      </ul>
                    </div>
                    <br>
                    <br>
                    <div class="dropdown">
                      <button  style="width:300px;" class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        我的回答
                        <span class="caret"></span>
                      </button>
                      <ul class="dropdown-menu"  style="width:300px;" aria-labelledby="dropdownMenu1">
                        <% data.A_list.forEach(function(foin){ %>
                        <li><a href="#">题目：<%= foin.q_title %></a></li>
                        <li><a href="#">提问者：<%= foin.q_author %></a></li>
                        <li role="separator" class="divider"></li>
                        <% }) %>
                      </ul>
                    </div>
                    <br><br>
                    <div class="dropdown">
                      <button  style="width:300px;" class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        我的关注
                        <span class="caret"></span>
                      </button>
                      <ul class="dropdown-menu"  style="width:300px;" aria-labelledby="dropdownMenu1">
                        <% data.F_list.forEach(function(foin){ %>
                        <li style="width:50%;float:left;text-algin:center;">
                          <a style='whidth:50%;' href="#"><%= foin.q_author %></a>
                        <% }) %>
                        </li>
                      </ul>
                    </div>
                    <br><br>
                    <div class="dropdown">
                      <button  style="width:300px;" class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        我的收藏
                        <span class="caret"></span>
                      </button>
                      <ul class="dropdown-menu"  style="width:300px;" aria-labelledby="dropdownMenu1">
                        <% data.col_list.forEach(function(foin){ %>
                        <li><a href="#"><%= foin.q_title %></a></li>
                        <li><a href="#">提问者：<%= foin.q_author %></a></li>
                        <li role="separator" class="divider"></li>
                        <% }) %>
                      </ul>
                    </div>
            </div>
