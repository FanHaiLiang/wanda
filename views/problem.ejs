<!DOCTYPE html>
<html>

<head>
    <title>问答系统</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.bootcss.com/jquery/3.0.0/jquery.min.js"></script>
    <script src="https://cdn.bootcss.com/socket.io/1.7.3/socket.io.min.js"></script>
    <script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style media="screen">
        body {
            margin: 0;
            padding: 0;
            width: auto;
            height: auto;
            /*background-color: rgb(8,151,242);*/
        }

        .e {
            margin-top: 20px;
        }

        .g {
            /*background-color: rgb(8,102,242);*/
        }
        .oi{
          background:rgb(8,151,242);
          color: white;
          box-shadow: 0px 0px 1px rgb(8,151,242),-0px -0px 1px rgb(8,151,242);
        }
        .yes_login{
          display: none;
        }
    </style>
</head>

<body>
    <% include heard %>
    <br>
        <div class="w container">
            <br>
            <div class="w">
                <form class="" action="/" method="get">
                    <div class="col-md-10 col-sm-10 col-xs-12">
                        <p class="Q"><%= Q %></p>
                        <div class="input-group ">
                            <span class="input-group-addon oi" id="basic-addon1"><strong>标题:</strong></span>
                            <input type="text" class="form-control Q_title" placeholder="一句话说清楚,用问号结尾" aria-describedby="basic-addon1">
                        </div>
                        <br>
                        <div class="input-group">
                            <span  class="input-group-addon oi" id="basic-addon1"><strong>标签:</strong></span>
                            <input type="text" class="form-control Q_tag" placeholder="如:php可使用分号;分隔" aria-describedby="basic-addon1">
                        </div>

                    </div>
                    <div class="col-md-12 e col-sm-12 col-xs-12">

                        <div class="Q_content" contenteditable="true" style='width:917px;height:166px;border:1px solid rgb(8,151,242);'></div>
                        <br>
                        <br>
                        <div class="btn-group" role="group" aria-label="...">
                            <button type="submit" class="btn btn-info submit">发布问题</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- 用来拿到用户名 -->
        <span style="display:none" class="user_user"><%=user %></span>
        <% include footer %>
</body>
<script type="text/javascript">
  $(function(){
    console.log($('.Q').text());
    if($('.Q').text() ===   '请先登录'){
      $('.submit').attr('disabled',true);
      $('.Q_tag').attr('disabled',true);
      $('.Q_title').attr('disabled',true);
    };
    var socket = io();
    $('.submit').click(function(){
      // if(user){
      var title = $('.Q_title').val();
      var tag = $('.Q_tag').val();
      var content = $('.Q_content').text();
      tag1 = tag.split(';');
      if(content){
        socket.emit('pro_in',{hehe:'hehe',title:title,tag:tag1,content:content,user:$('.user_user').text()});//.user_user上面spen标签的类名
      }
    });

  });
</script>
</html>
