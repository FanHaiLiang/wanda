<!DOCTYPE html>
<html>

<head>
    <title>问答系统</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.bootcss.com/jquery/3.0.0/jquery.min.js"></script>
    <script src="https://cdn.bootcss.com/socket.io/1.7.3/socket.io.min.js"></script>
    <script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style media="screen">
        body {
            margin: 0;
            padding: 0;
            width: auto;
            height: auto;
            /*background-color: rgb(8,151,242);*/
        }

        .e {
            margin-top: 20px;
        }

        .g {
            /*background-color: rgb(8,102,242);*/
        }
        .oi{
          background:rgb(8,151,242);
          color: white;
          box-shadow: 0px 0px 1px rgb(8,151,242),-0px -0px 1px rgb(8,151,242);
        }
        .yes_login{
          display: none;
        }
        .pro-tag{
          width: 40%;
          border: 1px rgb(8, 151, 242); solid;
          border-radius: 5px;
          box-shadow:inset 1px 1px 4px #bce8f1, inset -1px -1px 4px #bce8f1;
          position:absolute;
          z-index: 100;
          float: left;
          top:90px;
          left: 70px;
          display: none;
        }
        .tag{
          border: 1px solid rgb(8,151,242);
          background: rgb(8,151,242);
          color: white;
          margin: 5px 5px;
         }
    </style>
</head>

<body>
    <% include heard %>
    <br>
        <div class="w container">
            <br>
            <div class="w">
                <form class="" action="/" method="get">
                    <div class="col-md-10 col-sm-10 col-xs-12">
                        <div class="input-group ">
                            <span class="input-group-addon oi" id="basic-addon1"><strong>标题:</strong></span>
                            <input type="text" name='title' class="form-control Q_title" placeholder="一句话说清楚,用问号结尾" aria-describedby="basic-addon1">
                        </div>
                        <br>
                        <div class="input-group">
                            <span  class="input-group-addon oi" id="basic-addon1"><strong>标签:</strong></span>
                            <input type="text" name=tag class="form-control Q_tag" placeholder="如:php可使用分号;分隔" aria-describedby="basic-addon1">
                        </div>
                        <div class="pro-tag">
                          <ul class="nav nav-tabs oTag-ul">
                            <li><a style="padding:3px 7px;border-radius:5px;" class="tag"> 服务器</a></li>
                            <li><a style="padding:3px 7px;border-radius:5px;" class="tag"> javascript</a></li>
                          </ul>
                        </div>

                    </div>
                    <div class="col-md-12 e col-sm-12 col-xs-12">
                        <textarea id="tag-text" name="content" rows="8" cols="115"></textarea>
                        <br>
                        <br>
                        <div class="btn-group" role="group" aria-label="...">
                            <button type="submit" class="btn btn-info submit">发布问题</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <% include footer %>
</body>
<script type="text/javascript">
$(".Q_tag").focus(function () {
  $('.pro-tag').css('display','inline');
});
$("#tag-text").focus(function () {
  $('.pro-tag').css('display','none');
});

$('.tag').click(function(){
  console.log($(this).text());
  $('.Q_tag').val($(this).text());
});
</script>
</html>
